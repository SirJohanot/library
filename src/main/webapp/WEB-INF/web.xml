<?xml version="1.0" encoding="UTF-8"?>

<web-app>
    <display-name>Archetype Created Web Application</display-name>

    <servlet>
        <servlet-name>main</servlet-name>
        <servlet-class>com.epam.library.controller.Controller</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>main</servlet-name>
        <url-pattern>/controller</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>CharsetFilter</filter-name>
        <filter-class>com.epam.library.filter.CharsetFilter</filter-class>
        <init-param>
            <param-name>requestEncoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>CharsetFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>ManualRequestInputFilter</filter-name>
        <filter-class>com.epam.library.filter.ManualRequestInputFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>ManualRequestInputFilter</filter-name>
        <url-pattern>/controller</url-pattern>
    </filter-mapping>

    <jsp-config>
        <jsp-property-group id="defaultUtf8Encoder">
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
        </jsp-property-group>
        <taglib>
            <taglib-uri>customTags</taglib-uri>
            <taglib-location>/WEB-INF/tld/custom.tld</taglib-location>
        </taglib>
    </jsp-config>
</web-app>

